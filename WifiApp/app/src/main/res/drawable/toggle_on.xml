<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >

    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="oval" >
            <solid android:color="@color/green" />
        </shape>
    </item>

    <!-- center -->
    <item
        android:bottom="10dp"
        android:left="8dp"
        android:right="10dp"
        android:top="8dp">
        <shape android:shape="oval" >
            <size
                android:height="50dp"
                android:width="50dp" />

            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
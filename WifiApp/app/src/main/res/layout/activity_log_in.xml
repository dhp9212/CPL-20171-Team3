<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="kr.soen.wifiapp.LogInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_login"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="10dp"
            android:text="암호 입력" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#80FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="비바리움 암호를 입력해주세요." />


        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/pswView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            app:gpvTextColor="@color/colorPrimary"
            app:gpvTextSize="32sp"
            app:gpvLineColor="@color/colorPrimary"
            app:gpvLineWidth="1dp"
            app:gpvGridColor="@color/white"
            app:gpvPasswordLength="4"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:id="@+id/ok_button"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:textSize="18sp"
            android:text="확인" />
    </LinearLayout>
</RelativeLayout>

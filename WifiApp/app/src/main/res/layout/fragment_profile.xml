<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loading_background">

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="PROFILE"
            android:textSize="24sp"
            android:textColor="@color/black"/>
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_back_right"
            android:background="#00000000"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/l1"
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/coloe3_alpha">

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="ACCOUNT"
                android:textSize="24sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_account"/>

            <RelativeLayout
                android:layout_toEndOf="@id/image1"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ID"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/l2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/coloe3_alpha">

            <TextView
                android:id="@+id/control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="CONTROL"
                android:textSize="24sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/l3"
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/light_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIGHT"
                    android:textColor="@color/color3"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_off1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="OFF"/>

                    <Switch
                        android:id="@+id/light_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:track="@drawable/switch_track_off"
                        android:thumb="@drawable/switch_thumb_off"
                        android:textOn=""
                        android:textOff=""/>

                    <TextView
                        android:id="@+id/text_on1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="ON"/>

                    <ToggleButton
                        android:id="@+id/light_toggle"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/toggle_off"
                        android:textColor="@color/gray_semi"
                        android:textSize="12sp"
                        android:textOn="AUTO"
                        android:textOff="AUTO"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heater_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HEATER"
                    android:textColor="@color/color3"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_off2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="OFF"/>
                    <Switch
                        android:id="@+id/heater_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:track="@drawable/switch_track_off"
                        android:thumb="@drawable/switch_thumb_off"
                        android:textOn=""
                        android:textOff=""/>
                    <TextView
                        android:id="@+id/text_on2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="ON"/>

                    <ToggleButton
                        android:id="@+id/heater_toggle"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/toggle_off"
                        android:textColor="@color/gray_semi"
                        android:textSize="12sp"
                        android:textOn="AUTO"
                        android:textOff="AUTO"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HUMIDIFIER"
                    android:textColor="@color/color3"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_off3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="OFF"/>

                    <Switch
                        android:id="@+id/hum_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:track="@drawable/switch_track_off"
                        android:thumb="@drawable/switch_thumb_off"
                        android:textOn=""
                        android:textOff=""/>
                    <TextView
                        android:id="@+id/text_on3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="ON"/>

                    <ToggleButton
                        android:id="@+id/hum_toggle"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/toggle_off"
                        android:textColor="@color/gray_semi"
                        android:textSize="12sp"
                        android:textOn="AUTO"
                        android:textOff="AUTO"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/motor_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOTOR"
                    android:textColor="@color/color3"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="L"/>

                    <Switch
                        android:id="@+id/motor_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:track="@drawable/switch_track_off"
                        android:thumb="@drawable/switch_thumb_off"
                        android:textOn=""
                        android:textOff=""/>

                    <TextView
                        android:id="@+id/text_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="R"/>

                    <ToggleButton
                        android:id="@+id/motor_toggle"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/toggle_off"
                        android:textColor="@color/gray_semi"
                        android:textSize="12sp"
                        android:textOn="ON"
                        android:textOff="OFF"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
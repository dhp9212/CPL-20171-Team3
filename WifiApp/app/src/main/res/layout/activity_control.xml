<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="kr.soen.wifiapp.ControlActivity">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:text="제어설정"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list1"
        android:layout_below="@id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_uv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="전등"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <ToggleButton
            android:id="@+id/uv_toggle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/gray_semi"
            android:textSize="18sp"
            android:textOn="ON"
            android:textOff="OFF"/>

        <ToggleButton
            android:id="@+id/uv_auto_toggle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/gray_semi"
            android:textSize="18sp"
            android:textOn="AUTO"
            android:textOff="AUTO"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list2"
        android:layout_below="@id/list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_heater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="히터"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <ToggleButton
            android:id="@+id/heat_toggle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/gray_semi"
            android:textSize="18sp"
            android:textOn="ON"
            android:textOff="OFF"/>

        <ToggleButton
            android:id="@+id/heat_auto_toggle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/gray_semi"
            android:textSize="18sp"
            android:textOn="AUTO"
            android:textOff="AUTO"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list3"
        android:layout_below="@id/list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="가습"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <ToggleButton
            android:id="@+id/hum_toggle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/gray_semi"
            android:textSize="18sp"
            android:textOn="ON"
            android:textOff="OFF"/>

        <ToggleButton
            android:id="@+id/hum_auto_toggle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/gray_semi"
            android:textSize="18sp"
            android:textOn="AUTO"
            android:textOff="AUTO"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/list3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/list3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_motor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="모터"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="L"/>

            <Switch
                android:id="@+id/motor_side_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:track="@drawable/switch_track_off"
                android:thumb="@drawable/switch_thumb_off"/>

            <TextView
                android:id="@+id/text_R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="R"/>
        </LinearLayout>

        <ToggleButton
            android:id="@+id/motor_toggle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/gray_semi"
            android:textSize="18sp"
            android:textOn="ON"
            android:textOff="OFF"/>
    </LinearLayout>
</RelativeLayout>
